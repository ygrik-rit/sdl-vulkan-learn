name: Crossplatform build

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: fedora-latest

    steps:
    - uses: actions/checkout@v4

    - name: Run Workflow of Windows build from Linux
      working-directory: ${{ github.workspace }}
      run: >
        cmake --workflow windows-RelWithDebInfo