name: Base build

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ${{ matrix.os }}

    strategy:
      fail-fast: true
      matrix:
        os: [ubuntu-latest] # windows-latest, macos-latest
        build_type: [Debug] # RelWithDebInfo, Release, Debug, MinSizeRel 
    steps:
    - uses: actions/checkout@v4

    - name: Install Clang, libc++, compiler-rt, cmake
      if: matrix.os == 'ubuntu-latest'
      run: |
        sudo apt update
        sudo apt install clang libclang-dev libc++-dev libomp-dev llvm-dev libclang-rt-dev wget cmake -y

    - name: Run CMake Workflow for ${{ matrix.os }}
      working-directory: ${{ github.workspace }}
      run: >
        cmake --workflow --preset=base-${{ matrix.build_type }}
        
