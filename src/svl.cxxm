module;
#include <cstdlib>

#include "svl_config.hxx"
export module svl;

export import svl.platform;

export namespace svl
{
int run()
{
    using namespace svl;
    platform::window::context core_window(
        constants::appdata::title, 480, 360, 0);

    core_window.create({}, { "VK_KHR_wayland_surface" });

    while (core_window.is_running())
    {
        core_window.poll_event();
    }
    return EXIT_SUCCESS;
}
} // namespace svl