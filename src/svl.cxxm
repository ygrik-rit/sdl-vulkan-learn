module;
#include <cstdlib>

#include "svl_config.hxx"
export module svl;
import svl.platform.window;

export namespace svl
{
int run()
{
    using namespace svl;
    window::context core_window(constants::appdata::title, 480, 360, 0);

    core_window.create();

    while (core_window.is_running())
    {
        core_window.poll_event();
    }
    return EXIT_SUCCESS;
}
} // namespace svl